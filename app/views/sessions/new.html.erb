<div class="d-flex flex-column align-items-center">
<header class="page-header text-center">
  <h1>Login</h1>
</header>

<%= form_tag '/login' do %>
<div class="card">
  <div class="card-body">

  <div class="mb-3">
  Email: <br> <%= text_field_tag :email %>
  </div>

  <div class="mb-3">
  Password: <br> <%= password_field_tag :password %>
  </div>

  <div class="d-flex flex-column align-items-center">
  <%= submit_tag "Submit" %>
  </div>

  </div>
</div>
</div>
<% end %>